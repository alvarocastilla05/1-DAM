package ejercicio02;

public class Circulo {

	private double radio;
	
	//constructor.
	public Circulo (double radio) {
		this.radio=radio;
	}
	
	public double calcularArea() {
		double areaCm;
		double dos=2;
		areaCm=Math.PI*Math.pow(radio, dos);
		return areaCm;
	}
	
	public void mostrarArea (double areaCm) {
		System.out.printf("El área del círculo es: %.2f cm2\n", areaCm);
	}
	
	public double calcularAreaM2() {
		double areaM;
		int dos=2;
		int m2=10000;
		areaM=(Math.PI*Math.pow(radio, dos))/m2;
		return areaM;
	}
	
	
	public void mostrarAreaM2 (double areaM) {
		System.out.printf("El área del círculo es: %.2f m2", areaM);
	}
	
}
