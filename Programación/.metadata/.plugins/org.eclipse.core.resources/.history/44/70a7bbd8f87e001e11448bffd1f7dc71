package ejercicio02;

import java.util.Scanner;

public class Principal {

	public static void main(String[] args) {
		
		String aux;
		double radio;
		double areaCm;
		double areaM;
		Circulo a1;

		Scanner sc=new Scanner(System.in);
		
		System.out.println("Diga radio del c√≠rculo:");
		aux=sc.nextLine();
		radio=Double.parseDouble(aux);
		
		a1=new Circulo(radio);
		
		areaCm=a1.calcularArea();
		
		a1.mostrarArea(areaCm);
		
		areaM=a1.calcularAreaM2();
		
		a1.mostrarAreaM2(areaM);
	}

}
